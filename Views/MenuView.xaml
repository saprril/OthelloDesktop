<UserControl x:Class="OthelloDesktop.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="400" Width="600">

    <Grid Background="#222">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- Title -->
            <TextBlock Text="Othello Game"
                       FontSize="24"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 30"/>

            <!-- Buttons -->
            <Button Content="VS CPU" 
                    Command="{Binding VsCpuCommand}" 
                    Width="200" Height="40" Margin="0 0 0 15"/>

            <Button Content="VS Other Player" 
                    Command="{Binding VsOtherPlayerCommand}" 
                    Width="200" Height="40" Margin="0 0 0 15"/>

            <Button Content="Exit" 
                    Command="{Binding ExitCommand}" 
                    Width="200" Height="40"/>
        </StackPanel>
    </Grid>
</UserControl>
