<Window x:Class="OthelloDesktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:OthelloDesktop.Views"
        Title="Othello Game" Height="800" Width="1200">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/OthelloBackgroundPixel.png"
                    Stretch="UniformToFill"/>
        </Grid.Background>
        <!-- Initially load MenuView -->
        <views:MenuView />
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>

