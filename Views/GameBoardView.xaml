<UserControl x:Class="OthelloDesktop.Views.GameBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#222222" Opacity="0.65"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" 
         BorderThickness="3" 
         CornerRadius="4" 
         Padding="10"
         Width="500" Height="500"
         HorizontalAlignment="Center" VerticalAlignment="Center"
                >
            <Border.BorderBrush Visibility="{Binding IsWhiteTurn, Converter={StaticResource BoolToVisibilityConverter}}">
                <SolidColorBrush Color="LightCyan" Opacity="0.5"/>
            </Border.BorderBrush>
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{Binding BlackPlayer.Name}" 
                   Foreground="White" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="Black" Foreground="White" FontSize="20"/>
                <TextBlock Text="{Binding BlackScore}" 
                   Foreground="White" FontSize="24" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="DarkGreen"
                    BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="4"
                    Padding="4"
                    Width="500"
                    Height="500"
                    SnapsToDevicePixels="True">

                <ItemsControl ItemsSource="{Binding Squares}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="8" Columns="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.SquareClickCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Margin="1"
                                    Padding="0"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    Background="{Binding BackgroundColor}">
                                <Grid>
                                    <!-- Circle for the piece -->
                                    <Ellipse Width="40" Height="40"
                                             Fill="{Binding PieceColor}"
                                             Visibility="{Binding HasPiece, Converter={StaticResource BoolToVisibilityConverter}}"
                                             Stroke="Black" StrokeThickness="1"/>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
        <Border Grid.Column="2" 
                BorderThickness="3" 
                CornerRadius="4" 
                Padding="10"
                Width="500" Height="500"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.BorderBrush Visibility="{Binding IsWhiteTurn, Converter={StaticResource BoolToVisibilityConverter}}">
                <SolidColorBrush Color="Yellow" Opacity="0.5"/>
            </Border.BorderBrush>

            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{Binding WhitePlayer.Name}" 
                   Foreground="White" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="White" Foreground="White" FontSize="20"/>
                <TextBlock Text="{Binding WhiteScore}" 
                   Foreground="White" FontSize="24" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
