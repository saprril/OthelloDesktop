<UserControl x:Class="OthelloDesktop.Views.GameOverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="400" Width="600">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#222222" Opacity="0.99"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- Title -->
            <Image Source="/Assets/Game Over.png" 
               Width="250"
               Height="80"
               Stretch="Uniform"
               Margin="0,0,0,20"/>
            <TextBlock Text="{Binding ResultText}"
                          FontSize="18"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0 0 0 30"/>

            <!-- Buttons -->
            <Button Content="Play Again" 
                    Command="{Binding PlayAgainCommand}" 
                    Width="200" Height="40" Margin="0 0 0 15"/>

            <Button Content="Exit" 
                    Command="{Binding ExitCommand}" 
                    Width="200" Height="40"/>
        </StackPanel>
    </Grid>
</UserControl>
