<Application x:Class="OthelloDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:OthelloDesktop.ViewModels"
             xmlns:views="clr-namespace:OthelloDesktop.Views"
             xmlns:local="clr-namespace:OthelloDesktop"
             xmlns:converters="clr-namespace:OthelloDesktop.Converters">
    <Application.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <DataTemplate DataType="{x:Type vm:MenuViewModel}">
            <views:MenuView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PlayerSetupViewModel}">
            <views:PlayerSetupView />
        </DataTemplate>
    </Application.Resources>
</Application>
